{% extends 'admin/layout.html.twig' %}

{% block title %}Liste utilisateurs{% endblock %}

{% block content %}
    {#    {% if error %}#}
    {#        <div class="alert alert-danger">#}
    {#            {{ error }}#}
    {#        </div>#}
    {#    {% endif %}#}
    <section class="adminAddVehicle">
        <h1 style="text-align: center">Liste des utilisateurs</h1>
        <div class="row" style="margin-top: 30px;">
            <div class="scrollTable">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Role</th>
                        <th scope="col">Email</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Date de naissance</th>
                        <th scope="col">Adresse</th>
                        <th scope="col">Ville</th>
                        <th scope="col">Code postal</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Numéro de permis de conduire</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if users %}
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        {{ role }}
                                    {% endfor %}
                                </td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.birthdate|date('d/m/Y') }}</td>
                                <td>{{ user.address }}</td>
                                <td>{{ user.city }}</td>
                                <td>{{ user.zipcode }}</td>
                                <td>{{ user.phoneNumber }}</td>
                                <td>{{ user.licenseNumber }}</td>
                                <td><a href="{{ path('admin_user_edit',{'id': user.id}) }}">
                                        <button type="button" class="btn btn-warning">Modifier</button>
                                    </a>
                                    <a href="{{ path('admin_user_delete',{'id': user.id}) }}">
                                        <button type="button" class="btn btn-danger">Supprimer</button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
