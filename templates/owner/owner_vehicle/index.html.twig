                            <td>{{ vehicleLocation.vehicle.model }}</td>
                            <td>{{ vehicleLocation.vehicle.serialNumber }}</td>
                            <td>{{ vehicleLocation.vehicle.color }}</td>
                            <td>{{ vehicleLocation.vehicle.plateNumber }}</td>
