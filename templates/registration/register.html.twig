{% extends 'base.html.twig' %}

{% block title %}e-Motion - Inscription{% endblock %}

{% block body %}
    <div class="container">
    <section class="mid-container">
    <h1 class="mt-2">Inscription</h1>

        {{ form_start(registrationForm) }}

        {{ form_errors(registrationForm) }}

        <div class="mt-3 form-row">
            <div class="col">
                {{ form_label(registrationForm.username) }}
                {{ form_errors(registrationForm.username) }}
                {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.username) }}
            </div>
            <div class="col">
                {{ form_label(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
                {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.email) }}
            </div>
        </div>

        <div class="mt-3 form-row">
            <div class="col">
                {{ form_label(registrationForm.password.first) }}
                {{ form_errors(registrationForm.password.first) }}
                {{ form_widget(registrationForm.password.first, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.password.first) }}
            </div>
            <div class="col">
                {{ form_label(registrationForm.password.second) }}
                {{ form_errors(registrationForm.password.second) }}
                {{ form_widget(registrationForm.password.second, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.password.second) }}
            </div>
        </div>

        <div class="mt-3 form-row">
            <div class="col">
                {{ form_label(registrationForm.firstname) }}
                {{ form_errors(registrationForm.firstname) }}
                {{ form_widget(registrationForm.firstname, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.firstname) }}
            </div>
            <div class="col">
                {{ form_label(registrationForm.lastname) }}
                {{ form_errors(registrationForm.lastname) }}
                {{ form_widget(registrationForm.lastname, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.lastname) }}
            </div>
        </div>

        <div class="mt-3">
            {{ form_label(registrationForm.birthdate) }}
            {{ form_errors(registrationForm.birthdate) }}
            {{ form_widget(registrationForm.birthdate) }}
            {{ form_help(registrationForm.birthdate) }}
        </div>

        <div class="mt-3">
            {{ form_label(registrationForm.address) }}
            {{ form_errors(registrationForm.address) }}
            {{ form_widget(registrationForm.address, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(registrationForm.address) }}
        </div>

        <div class="mt-3 form-row">
            <div class="col">
                {{ form_label(registrationForm.city) }}
                {{ form_errors(registrationForm.city) }}
                {{ form_widget(registrationForm.city, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.city) }}
            </div>
            <div class="col">
                {{ form_label(registrationForm.zipcode) }}
                {{ form_errors(registrationForm.zipcode) }}
                {{ form_widget(registrationForm.zipcode, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.zipcode) }}
            </div>
        </div>
        <div class="mt-3 form-row">
            <div class="col">
                {{ form_label(registrationForm.phone_number) }}
                {{ form_errors(registrationForm.phone_number) }}
                {{ form_widget(registrationForm.phone_number, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.phone_number) }}
            </div>
            <div class="col">
                {{ form_label(registrationForm.license_number) }}
                {{ form_errors(registrationForm.license_number) }}
                {{ form_widget(registrationForm.license_number, { 'attr': {'class': 'form-control'} }) }}
                {{ form_help(registrationForm.license_number) }}
            </div>
        </div>

        <div class="mt-3">
            {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn'}}) }}
        </div>

        {{ form_end(registrationForm) }}

        <p>(*) Champs obligatoires</p>
    </section>
    </div>

    <script>
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker({format: 'dd-mm-yyyy'});

        });
    </script>
{% endblock %}
